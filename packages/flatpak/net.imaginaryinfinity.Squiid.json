{
    "app-id": "net.imaginaryinfinity.Squiid",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "squiid",
    "finish-args": [
        "--share=network"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [{
        "name": "squiid",
        "buildsystem": "simple",
        "build-options": {
            "env": {
                "CARGO_HOME": "/run/build/squiid/cargo"
            }
        },
        "build-commands": [
            "cargo --offline fetch --manifest-path Cargo.toml --verbose",
            "cargo --offline build --release --verbose",
            "install -Dm755 ./target/release/squiid -t /app/bin/",
            "install -D ./branding/squiidsquare.svg /app/share/icons/hicolor/scalable/apps/net.imaginaryinfinity.Squiid.svg",
            "install -D ./net.imaginaryinfinity.Squiid.metainfo.xml /app/share/metainfo/net.imaginaryinfinity.Squiid.metainfo.xml",
            "install -D ./net.imaginaryinfinity.Squiid.desktop /app/share/applications/net.imaginaryinfinity.Squiid.desktop"
        ],
        "sources": [{
                "type": "archive",
                "url": "https://gitlab.com/ImaginaryInfinity/squiid-calculator/squiid/-/archive/$VERSION/squiid-$VERSION.tar.gz",
                "sha256": "$HASH"
            },
            {
                "type": "file",
                "path": "net.imaginaryinfinity.Squiid.desktop"
            },
            {
                "type": "file",
                "path": "packages/flatpak/net.imaginaryinfinity.Squiid.metainfo.xml"
            },
            "generated-sources.json"
        ]
    }]
}